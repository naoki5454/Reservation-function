<!DOCTYPE html>
<html>
  <head>
    <title>ReservationFunction</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="text-right navbar-expand-lg">
        <ul>
          <% if customer_signed_in? %>
          <li class='font rounded nav-link text-body mr-1'>ようこそ！</li>
          <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'font rounded nav-link text-body mr-1'%></li>
          <li><%= link_to "topページ", root_path, class: 'font rounded nav-link text-body mr-1'%></li>
          <li><%= link_to "予約", new_reservationc_path, class: 'font rounded nav-link mr-1'%></li>
          <li><%= link_to "予約一覧", reservationcs_path, class: 'font rounded nav-link text-body mr-1'%></li>
          <% else %>
          <li><%= link_to "topページ", root_path %></li>
        </ul>
        <% end %>
      </nav>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
